<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".CalculatorFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="9dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/textviewInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingRight="17dp"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/textviewoutput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/textviewoutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingRight="17dp"
            android:text=""
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="65dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPer"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:background="@drawable/zerobutton"
            android:text="0        "
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:background="@drawable/counting"
            android:text="."
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn0" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:background="@drawable/math"
            android:text="="
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btnDot" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:background="@drawable/counting"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btn0"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/counting"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btn0"
            app:layout_constraintLeft_toRightOf="@id/btn1" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/counting"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btnDot"
            app:layout_constraintLeft_toRightOf="@id/btn2" />

        <Button
            android:id="@+id/btnadd"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/math"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btnEqual"
            app:layout_constraintLeft_toRightOf="@id/btn3" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/counting"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btn1"
            app:layout_constraintLeft_toLeftOf="parent" />
        <Button
            android:id="@+id/btn5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/counting"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@id/btn2"
            app:layout_constraintLeft_toRightOf="@+id/btn4"
            />
        <Button
            android:id="@+id/btn6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/counting"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btn3"
            app:layout_constraintLeft_toRightOf="@+id/btn5"
            />
        <Button
            android:id="@+id/btnsub"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/math"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btnadd"
            app:layout_constraintLeft_toRightOf="@+id/btn6"
            />
        <Button
            android:id="@+id/btn7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/counting"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btn4"
            app:layout_constraintLeft_toLeftOf="parent" />
        <Button
            android:id="@+id/btn8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/counting"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@id/btn5"
            app:layout_constraintLeft_toRightOf="@+id/btn7"
            />
        <Button
            android:id="@+id/btn9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/counting"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btn6"
            app:layout_constraintLeft_toRightOf="@+id/btn8"
            />
        <Button
            android:id="@+id/btnMul"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/math"
            android:text="\u00D7"
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btnsub"
            app:layout_constraintLeft_toRightOf="@+id/btn9"
            />
        <Button
            android:id="@+id/btnAC"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/others"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btn7"
            app:layout_constraintLeft_toLeftOf="parent" />
        <Button
            android:id="@+id/btnPN"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/others"
            android:text="\u00B1"
            android:textColor="@color/black"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@id/btn8"
            app:layout_constraintLeft_toRightOf="@+id/btnAC"
            />
        <Button
            android:id="@+id/btnPer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/others"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@id/btn9"
            app:layout_constraintLeft_toRightOf="@+id/btnPN"
            />
        <Button
            android:id="@+id/btnDiv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/math"
            android:text="÷"
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintBottom_toTopOf="@+id/btnMul"
            app:layout_constraintLeft_toRightOf="@+id/btnPer"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>